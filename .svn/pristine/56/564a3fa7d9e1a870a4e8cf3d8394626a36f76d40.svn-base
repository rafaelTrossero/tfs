    <h:form id="form">
      

                    <div class="col-lg-12">
                        <h2 class="page-header">Plantel Docente</h2>
                    </div>

                    <h:dataTable id="dtDocentes"
                                 styleClass="table"
                                 rows="50"
                                 value="#{listaDocenteBean.lstDocenteCatedra}"
                                 var="item"    >


                        <p:column    width="500" >
                            <f:facet name="header">
                                <h:outputText value="Apellido y Nombre"/>
                            </f:facet>
                            <h:outputText value="#{item.docente.apellido}, #{item.docente.nombre}"/>
                        </p:column>                


                        <p:column  width="500">
                            <f:facet name="header">
                                <h:outputText value="Cargo"/>
                            </f:facet>
                            <h:outputText value="#{item.docente.cargo.descripcion}"/>
                        </p:column> 

                        <p:column headerText="Catedra">
                            <p:commandLink value="#{item.catedra.nombre}" oncomplete="PF('test').show()"
                                           update=":form:dialog">
                                <f:setPropertyActionListener target="#{listaDocenteBean.selectedDocenteCatedra}"
                                                             value="#{item}" />
                            </p:commandLink>
                        </p:column>


                        <p:column  width="500">
                            <f:facet name="header">
                                <h:outputText value="E-mail"/>
                            </f:facet>
                            <h:outputText value="#{item.docente.email}"/>
                        </p:column> 

                    </h:dataTable>   
        <p:dialog modal="true" width="500" height="500" widgetVar="test"
            id="dialog">
            <p:outputLabel value="Nombre de la Cátedra:  "/>
            <h:outputText  value="  #{listaDocenteBean.selectedDocenteCatedra.catedra.nombre}"/>
            <div style="clear: both;"/>
             <p:outputLabel value="Carrera:  "/>
             <h:outputText value="  #{listaDocenteBean.selectedDocenteCatedra.catedra.carrera.carrera}"/>
            
