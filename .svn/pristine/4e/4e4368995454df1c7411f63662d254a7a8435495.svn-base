                    </p>
                    <br/><br/>
                    <h:outputText value="Â¿Deseas continuar con la session?"/>
                    
                    <center>
                        <p:commandButton value="SI"  oncomplete="resetPageTimer()"/>
                        <p:commandButton value="No"  action="#{controlSesionBean.cerrarSession()}" oncomplete="redirectLogin()"/>
                    </center>
                    
